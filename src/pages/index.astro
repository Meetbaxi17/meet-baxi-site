---
// Import the layout and components
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";


import ImageCard from "../components/ImageCard.astro";
import BigCard from "../components/BigCard.astro";

---

<MainLayout title="Welcome to My Website">
	<h1>Meet Baxi</h1>
	<p>A simple website built with Astro</p>


	<!-- Example of using a component with props -->
	<Button text="Explore Now" />
	<BigCard heading="Welcome to My Website" paragraph="This is a beginner-friendly website starter. It's built with Astro and designed to help you learn HTML, CSS, and basic components." />

	<h2>Features</h2>
	<ImageCard link="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b6/Image_created_with_a_mobile_phone.png/500px-Image_created_with_a_mobile_phone.png" caption="Google Donloaded Image"/>
	<!-- Example of using another component with props -->
	<Card title="Simple Design" content="Clean and minimal design that's easy to understand." />
	<Card title="Easy to Edit" content="Change text, colors, and layout with simple code." />
	<Card title="Read More" content="Every file has helpful comments to guide you." />
		<Button text="Read More" />

	<p class="Anotherparagraph">This is the end of the website</p>
	<ImageCard link="https://upload.wikimedia.org/wikipedia/commons/thumb/b/b6/Image_created_with_a_mobile_phone.png/500px-Image_created_with_a_mobile_phone.png" caption="Google Donloaded Image"/>

</Layout>
